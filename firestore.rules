rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rooms collection
    match /rooms/{roomId} {
      // Allow read if:
      // - User created the room, OR
      // - User is a player in the room, OR
      // - Room is waiting for players (for invite acceptance)
      allow read: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        (resource.data.players != null && (
          resource.data.players.X.userId == request.auth.uid ||
          (resource.data.players.O != null && resource.data.players.O.userId == request.auth.uid)
        )) ||
        resource.data.status == 'waiting'
      );

      // Allow create if user is authenticated
      allow create: if request.auth != null;

      // Allow update if:
      // - User created the room, OR
      // - User is a player in the room, OR
      // - User is joining as Player O (for invite acceptance)
      allow update: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        (resource.data.players != null && (
          resource.data.players.X.userId == request.auth.uid ||
          (resource.data.players.O != null && resource.data.players.O.userId == request.auth.uid)
        )) ||
        (resource.data.status == 'waiting' &&
         request.resource.data.players.O.userId == request.auth.uid)
      );

      // Allow delete only if user created the room
      allow delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    // Flagged Moves collection - AI feedback system
    match /flaggedMoves/{flagId} {
      // Anyone authenticated can create flags
      allow create: if request.auth != null;

      // Users can read their own flags
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;

      // No updates or deletes (flags are immutable for data integrity)
      allow update, delete: if false;
    }
  }
}
